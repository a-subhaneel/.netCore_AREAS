@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebPACS.Areas.Administrator.Models.AdministratorModel

@{
    ViewBag.Title = "Signin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="margin-left:25px">Signin</h1>

@if (TempData["Success"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
}

<hr />
<div class="row" style="margin-left:10px">
    <div class="col-md-4">
        <form asp-action="Signin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-left:-15px">
                @Html.LabelFor(model => model.AdminEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AdminEmail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AdminEmail, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="margin-left:-15px">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-outline-primary" />
                <br>
                @*<input type="" style="margin-top:5px" value="" class="btn btn-outline-primary">*@

                @*<input type="submit" value="Sign in" class="mui-btn mui-btn--primary" />*@
        <a asp-action="RegisterAdmin" asp-controller="Administrator" class="mui-btn mui-btn--primary">Admin Registration</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
