                                <input class="form-control col-md-10" style="margin-top:30px;margin-left:-30px" placeholder="Rate Of Interest" />
                            </div>

                        </div>
                    </div>


                    <div class="row">
                        <div class="form-group col-md-6">
                            <input class="form-control col-md-5" style="margin-top:-20px;margin-left:340px" placeholder="Duration" />
                        </div>

                        <div class="form-group col-md-6">
                            <input class="form-control col-md-5" style="margin-top:-20px;margin-left:80px" placeholder="Rate Of Interest" />

                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <input class="form-control col-md-5" style="margin-top:-5px;margin-left:340px" placeholder="Duration" />
                        </div>


                        <div class="form-group col-md-6">
                            <input class="form-control col-md-5" style="margin-top:-5px;margin-left:80px" placeholder="Rate Of Interest" />

                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" style="margin-top:-100px;" value="Create" class="btn btn-primary" />
                    </div>
                </div>


