                        <div class="form-group col-md-6">
                            <input class="form-control col-md-5" style="margin-top:-20px;margin-left:340px" placeholder="Duration" />
                        </div>

                        <div class="form-group col-md-6">
                            <input class="form-control col-md-5" style="margin-top:-20px;margin-left:80px" placeholder="Rate Of Interest" />

                        </div>
                    </div>

                    <div class="row">
