                            <div class="form-group col-md-6">
                                <input class="form-control col-md-10" style="margin-top:30px;margin-left:8px" placeholder="Duration" />
                            </div>
                            <div class="form-group col-md-6">
                                <input class="form-control col-md-10" style="margin-top:30px;margin-left:-30px" placeholder="Rate Of Interest" />
